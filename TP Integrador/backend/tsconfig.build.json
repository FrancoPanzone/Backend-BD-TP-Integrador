// tsconfig.build.json
// para que el deploy de render en produccion ignore los src/test
// deja tsconfig.json intacto para dev y tests, y el build de Docker queda limpio y seguro.
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false
  },
  "include": ["src/**/*.ts"],  // <-- incluir solo tu código fuente
  "exclude": [
    "tests",
    "jest.setup.ts",
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/__tests__",
    "eslint.config.ts"          // <-- asegúrate de excluir configs
  ]
}

